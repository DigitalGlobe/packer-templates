{
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": "9",
                "output": "output/hoot/centos7-minimal_{{.Provider}}.box"
            },
            {
                "type": "vagrant-cloud",
                "access_token": "{{user `access_token`}}",
                "box_tag": "{{user `box_tag`}}",
                "version": "{{user `box_version`}}"
            }
        ]
    ],
    "variables": {
        "access_token": null,
        "box_tag": "hoot/centos7-minimal",
        "box_version": "{{isotime \"20060102\"}}.0.0",
        "disk_size": "40960"
    }
}
