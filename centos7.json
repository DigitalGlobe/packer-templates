{
    "builders": [
        {
            "type": "virtualbox-iso",
            "headless": "{{user `headless`}}",
            "boot_command": "<tab> nofb text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart_file`}}<enter><wait>",
            "disk_size": "{{user `disk_size`}}",
            "guest_os_type": "RedHat_64",
            "hard_drive_interface": "{{user `hard_drive_interface`}}",
            "http_directory": "www",
            "iso_urls": [
                "https://archive.kernel.org/centos/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso"
            ],
            "iso_checksum_type": "sha256",
            "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "10m",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "vm_name": "centos7-x86_64",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
                ["modifyvm", "{{.Name}}", "--memory", "{{user `memsize`}}"],
                ["modifyvm", "{{.Name}}", "--nictype1", "{{user `nictype`}}"]
            ]
        }
    ],
    "post-processors": [
        {
            "output": "boxes/centos7-{{.Provider}}.box",
            "type": "vagrant"
        }
    ],
    "variables": {
        "cpus": "1",
        "disk_size": "8192",
        "hard_drive_interface": "sata",
        "headless": "false",
        "kickstart_file": "ks.cfg",
        "memsize": "512",
        "nictype": "virtio",
        "ssh_wait_timeout": "10m"
    }
}
